/*****----- Configuration -----*****/
configuration {
	modi:                       "drun";
    show-icons:                 true;
    display-drun:               "";
}

// TODO THE REST OF THE DESIGN AND SHIT AND EVERYTHING.
window {
	/* properties for window widget */
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    x-offset:                    0px;
    y-offset:                    0px;

	/* properties for all widgets */
    cursor:                      "default";
    enabled:                     true;
    margin:                      0px;
    padding:                     0px;
    border:                      3px solid;
    border-radius:               12px;
    border-color:                @Yellow;
	text-color:					 inherit;
    background-color:            @Base;
}


/******************************/
/*****----- Main Box -----*****/
/******************************/
mainbox {
    enabled:                     true;
    spacing:                     0px;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:				 0px;
    border-color:                @Base;
    background-color:            transparent;
    children:                    [ "inputbar", "listview"];
}


/******************************/
/*****----- Inputbar -----*****/
/******************************/
inputbar {
    enabled:                     true;
    spacing:                     10px;
	margin:                      9px 9px 5px 9px;                  
    padding:                     4px;
    border:                      2px solid;
    border-radius:               7px;
    border-color:                @Blue;
    background-color:            transparent;
    text-color:                  @Text;
    children:                    ["prompt", "entry" ];
}
prompt {
    enabled:                     true;
    background-color:            inherit;
    text-color:                  inherit;
    padding:                     4px 12px 4px 6px;
    border-radius:               7px;
    text-color:                  @Base;
    background-color:            @Teal;
}
entry {
    enabled:                     true;
    background-color:            @Base;
    text-color:                  @Text;
    cursor:                      text;
    placeholder:                 "search...";
    placeholder-color:           inherit;
    align:                       center;
}

/******************************/
/*****----- Listview -----*****/
/******************************/
element, element-text, element-icon {
    border:           0px solid;
    padding:          4px; 
    background-color: @Base;
    text-color:       @Text;
}